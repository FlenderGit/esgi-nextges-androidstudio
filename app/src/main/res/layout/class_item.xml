<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/class_start_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="TextView" />

        <TextView
            android:id="@+id/class_end_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_marginRight="15px"
            android:text="TextView" />

    </LinearLayout>

    <View
        android:id="@+id/class_dividerView"
        android:layout_width="16px"
        android:layout_height="160px"
        android:background="#FF2222" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/class_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_eatcher_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Teacher" />

        <TextView
            android:id="@+id/class_room_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Room" />
    </LinearLayout>
</LinearLayout>